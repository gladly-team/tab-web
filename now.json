{
  "name": "tab-web",
  "version": 2,
  "scope": "gladly-team",
  "cleanUrls": true,
  "rewrites": [
    { "source": "/newtab/(.*)", "destination": "/$1" },
    {
      "source": "/service-worker.js",
      "destination": "/_next/static/service-worker.js"
    },
    { "source": "/v4/(.*)", "destination": "/$1" }, // for development
  ],
  "headers": [
    {
      "source": "/newtab/service-worker.js",
      "headers" : [
        {
          "key" : "Cache-Control",
          "value" : "no-cache"
        },
        {
          "key" : "Service-Worker-Allowed",
          "value" : "/newtab/"
        }
      ]
    }
  ],
  "env": {
    "FIREBASE_CLIENT_EMAIL": "firebase-adminsdk-kuncd@dev-tab-for-a-cause.iam.gserviceaccount.com",
    "FIREBASE_DATABASE_URL": "https://dev-tab-for-a-cause.firebaseio.com",
    "FIREBASE_PRIVATE_KEY": "@firebase-private-key",
    "FIREBASE_PROJECT_ID": "dev-tab-for-a-cause",
    "SESSION_COOKIE_SECURE_SAME_SITE_NONE": "true",
    "SESSION_SECRET_CURRENT": "@session-secret-current",
    "SESSION_SECRET_PREVIOUS": "@session-secret-previous"
  },
  "build": {
    "env": {
      "ADS_ENABLED": "true",
      "ADS_USE_MOCK_ADS": "false",
      "FIREBASE_PUBLIC_API_KEY": "AIzaSyDrGghKLnfOwwaSnPM0unRDXz_4YdorKU4",
      "FIREBASE_AUTH_DOMAIN": "dev-tab-for-a-cause.firebaseapp.com",
      "FIREBASE_DATABASE_URL": "https://dev-tab-for-a-cause.firebaseio.com",
      "FIREBASE_PROJECT_ID": "dev-tab-for-a-cause",
      "GRAPHQL_SCHEMA_LOCATION": "./src/schema/schema.graphql",
      "RELAY_ENDPOINT": "https://dev-tab2017.gladly.io/graphql/",
      "SERVICE_WORKER_ENABLED": "true",
      "URLS_BASE_PATH": "/newtab",
      "URLS_USE_TRAILING_SLASH": "true"
    }
  }
}
